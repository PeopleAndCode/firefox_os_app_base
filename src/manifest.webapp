{
  "name": "Firefox OS App Template",
  "description": "Base template for a FxOS app using Yeoman, Bower, Grunt, Haml, Sass, Ember, Hamlbars.",
  "launch_path": "/index.html",
  "icons": {
    "128": "/img/icon-128.png"
  },
  "developer": {
    "name": "Raymond Kao",
    "url": "https://github.com/PeopleAndCode/firefox_os_app_base"
  },
  "default_locale": "en",
// optional
   "activities": {
    "share": {
      "filters": {
        "type": [ "image/png", "image/gif" ]
      },
      "href": "foo.html",
      "disposition": "window",
      "returnValue": true
    }
  },
  "appcache_path": "/cache.appcache",
  "chrome": {
    "navigation": false
  },
  "fullscreen": "true",
  "installs_allowed_from": ["*"],
